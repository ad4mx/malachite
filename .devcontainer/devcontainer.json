{
    "name": "Rust on Crystal",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "settings": {
        "lldb.executable": "/usr/bin/lldb",
        "files.watcherExclude": {
            "**/target/**": true
        }
    },
    "extensions": [
        "rust-lang.rust",
        "bungcip.better-toml",
        "vadimcn.vscode-lldb",
        "mutantndino.resourcemonitor"
    ],
    "forwardPorts": [],
    "postCreateCommand": "rustc --version"
}
